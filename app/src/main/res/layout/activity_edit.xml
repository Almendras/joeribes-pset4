<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joeribes.joeribes_pset4.EditActivity">

    <TextView
        android:id="@+id/activityView"
        android:layout_width="279dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Edit your activity "
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/activityInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Activity "
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="78dp"
        android:layout_below="@+id/activityView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:onClick="editButtonClicked"
        android:text="Edit your activity "
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="307dp" />


    <EditText
        android:id="@+id/descriptionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/activityInput"
        android:layout_alignStart="@+id/activityInput"
        android:layout_below="@+id/activityInput"
        android:layout_marginTop="22dp"
        android:gravity="top|left"
        android:hint="Description"
        android:lines="8"
        android:maxLines="10"
        android:minLines="1"
        android:scrollbars="vertical" />

</RelativeLayout>
